# LICENSE AUTHORITY v2: Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# Use SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///~/.mhamp1_licenseauthority/licenses.db
# DATABASE_URL=postgresql://user:password@localhost/license_authority

# Security
JWT_SECRET=change-this-to-a-secure-random-string-in-production
ADMIN_TOKEN=change-this-admin-token-to-secure-random-string

# API Server
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://app.quantumfalcon.com

# Payment Provider Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret

# Email Configuration (for renewal reminders)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@quantumfalcon.com

# Optional: Redis for rate limiting (if not using in-memory)
# REDIS_URL=redis://localhost:6379/0
